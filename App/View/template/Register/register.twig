{% extends "base.twig" %}
{% block title %}Register{% endblock %}
{% block body %}
    <h1>Register</h1>
    <form action="register" method="post">
        {{ form_token("register.php") }}
        <div>
            <label for="firstname">First name:</label>
            <input type="text" id="firstname" name="first_name" placeholder="First name" autofocus value="{{ first_name }}" />
            {{ error_first_name }}
        </div>
        <div>
            <label for="lastname">Last name:</label>
            <input type="text" id="lastname" name="last_name" placeholder="Last name" autofocus value="{{ last_name }}" />
            {{ error_last_name }}
        </div>
        <div>
            <label for="mobilenumber">Mobile number</label>
            <input type="text" id="mobilenumber" name="mobile_number" placeholder="Your 10 digit mobile number" autofocus value="{{ mobile_number }}"/>
            {{ error_mobile_number }}
        </div>
        <div>
            <label for="email">Email address</label>
            <input type="email" id="email" name="email" placeholder="Email address" autofocus value="{{ email }}" />
            {{ error_email }}
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Password"/>
            {{ error_password }}
        </div>
        <button type="submit">Register</button>
    </form>
{% endblock %}
